{
  "name": "browser",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -k -r \"npm run dev\" \"npm run electron:serve\"",
    "electron:serve": "cross-env VITE_DEV_SERVER_URL=http://localhost:3000 wait-on http://localhost:3000 && electron .",
    "electron:build": "npm run build && electron-builder",
    "build:release": "cross-env KEEP_LOCALES=en-US KEEP_CHROME_PAKS=0 npm run electron:build && node electron/printReleaseSize.cjs",
    "dist-size": "node electron/printReleaseSize.cjs"
  },
  "dependencies": {
    "@ghostery/adblocker": "^2.13.2",
    "clsx": "^2.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-grid-layout": "^1.5.3",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.browser.browser",
    "productName": "Browser",
    "icon": "src/assets/AppIcon.ico",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "electron/filters/**/*",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "afterPack": "electron/afterPack.cjs",
    "directories": {
      "output": "release",
      "buildResources": "src/assets"
    }
  }
}
